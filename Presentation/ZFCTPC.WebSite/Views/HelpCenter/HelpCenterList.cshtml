<script type="text/javascript">
    function Tab(tab) {
        $(".v").each(function () {
            $(this).removeClass("v02").addClass("v01");
        });
        $(".helpcenter_title ").each(function () {
            $(this).removeClass("helpcenter_titleblue");
        });
        $(".helpcenter_vcon ").css("display", "none");
        var $div_li = $(" ul.helpcenter_tab li");
        var index = $div_li.index($(tab));
        $(tab).addClass("active")
            .siblings().removeClass("active");

        $("div.helpcenter_content > div")
            .eq(index).show()
            .siblings().hide();
    };
    Tab(@Html.Raw(ViewBag.Tab));
</script>

<script>
    $(function () {
        //菜单隐藏展开
        var tabs_i = -1;
        $('.helpcenter_title').click(function () {
            var _self = $(this);
            var j = $('.helpcenter_title').index(_self);
            if (tabs_i == j) return false; tabs_i = j;
            $('.helpcenter_title  em.v').each(function (e) {
                if (e == tabs_i) {
                    $('em.v', _self).removeClass('v01').addClass('v02');
                    $(this).parent().addClass("helpcenter_titleblue");
                } else {
                    $(this).removeClass('v02').addClass('v01');
                    $(this).parent().removeClass("helpcenter_titleblue");
                }
            });
            $('.helpcenter_vcon').slideUp().eq(tabs_i).slideDown();
        });
        var $div_li = $(" ul.helpcenter_tab li");
        $div_li.click(function () {
            $(this).addClass("active")
                .siblings().removeClass("active");
            var index = $div_li.index(this);
            $("div.helpcenter_content > div")
                .eq(index).show()
                .siblings().hide();
        }).hover(function () {
            $(this).addClass("hover");
        },
            function () {
                $(this).removeClass("hover");
            });
    })
</script>
@if (string.IsNullOrEmpty(ViewBag.Tab))
