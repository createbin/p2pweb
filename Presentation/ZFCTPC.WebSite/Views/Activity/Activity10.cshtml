                            <th>
                                年化投资金额（元）
                            </th>
                            <th class="border-right-none">
                                奖励
                            </th>
                        </tr>
                        @for (int i = 0; i < 3; i++)
                        {
                            @if (i == 0)
                            {
                                <tr>
                                    @if (rankList.Count > i && rankList[i] != null)
                                    {

                                        <td>
                                            1
                                        </td>
                                        <td>
                                            @rankList[i].Money
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            虚位以待
                                        </td>
                                        <td>
                                           0
                                        </td>

                                    }
                                    
                                    <td class="border-right-none">
                                        100元现金+10元投资红包
                                    </td>
                                </tr>

                            }
                            else if (i == 1)
                            {

                                <tr>
                                    @if (rankList.Count > i && rankList[i] != null)
                                    {

                                        <td>
                                            2
                                        </td>
                                        <td>
                                            @rankList[i].Money
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            虚位以待
                                        </td>
                                        <td>
                                            0
                                        </td>

                                    }
                                    <td class="border-right-none">
                                        50元现金+5元投资红包
                                    </td>
                                </tr>
                            }
                            else if (i == 2)
                            {
                                <tr>
                                    @if (rankList.Count > i && rankList[i] != null)
                                    {

                                        <td>
                                            3
                                        </td>
                                        <td>
                                            @rankList[i].Money
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            虚位以待
                                        </td>
                                        <td>
                                            0
                                        </td>

                                    }
                                    <td class="border-bottom-none border-right-none">
                                        30元现金+3元投资红包
                                    </td>
                                </tr>

                            }
                        }
                        
                    </table>

                </div>
                <div style="height:30px;"></div>
                <div style="text-align:center">
                    <div class="newyear_box1_tips">
                        <p>
                            小提示：每周统计是独立的，所以允许重复获得奖励噢
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div style="height:80px;"></div>
    
