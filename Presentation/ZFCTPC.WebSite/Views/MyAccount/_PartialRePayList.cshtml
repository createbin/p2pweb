                <td>@string.Format("{0:C}", item.PayServiceFee)</td>
                <td>@item.CollectType</td>
                <td>
                    @if (item.IsUsing)
                    {
                        <button class="repayPlan1" disabled>还款</button>
                    }
                    else
                    {
                        <a id="repaymentBtn" href="#" onclick="repayment(@item.Id)" class="yellow font_size_12">还款</a>
                    }
                    
