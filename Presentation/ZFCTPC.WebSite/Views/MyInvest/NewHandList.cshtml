@{
    Layout = "~/Views/Shared/_LayoutHeadFoot.cshtml";
    ViewData["Title"] = "优选计划_投资列表页_中房创投";
    ViewData["Description"] = "中房创投提供安全可靠的定期投资理财产品,实现6-10%的预期年化收益率!效果明显、收益明确、理财更安心,为投资者带来稳定的收益率";
    ViewData["Keywords"] = "新手理财,专享理财产品,中房创投专享理财产品";
   
}

<style>
    .zfct_bg {
        background: #f0f0f0;
    }
</style>

<script>
    $(function () {
        navActive(2);
    })
</script>

<div class="recommend_bg">
    <img src="~/images/banner/recommend_bg.jpg" class="img-responsive" />
</div>
<div class="invest_class">
    <ul class="recommend_class_box font_size_18">
        <li id="">
            <img src="~/images/newhand_select.png" />
            <em class="margin_left_24 blue">新手标</em>
        </li>
        <li id="investlist">
            <img src="~/images/recommend_gray.png" />
            <em class="margin_left_24 gray1">推荐标</em>
        </li>
        <li class="border-right-none" id="transfer">
            <img src="~/images/recommendno.png" />
            <em class="margin_left_24 gray1">债转标</em>
        </li>
        <div class="clear"></div>
    </ul>
</div>
<div style="height:20px"></div>

<div class="invest_list">
    <div id="newhandList">

    </div>
    <div class="recommend_page">
       
        <div style="height: 50px"></div>

        <div style="text-align: center">
            <div class="pager_box">
                <div id="pager" class="pager_div"></div>
            </div>
        </div>
        <div style="height: 50px"></div>
    </div>
</div>
<div style="height:40px;"></div>


<script>
    $(function () { 
        $('#investlist').click(function () {
            location.href = "/myInvest/RecommendedList";
        });
        $('#transfer').click(function () {
            location.href = "/Transfer/ClaimsList";
        });

        var pageCallback = function (index, jq) {
            $('#newhandList').load("/MyInvest/_PartialNewHand", { page: index.getCurrent() });
            $('html,body').animate({ scrollTop: 0 }, 'slow');
        }
        var setPage = function (total, count) {
            $('#pager').pagination({
                callback: pageCallback,
                totalData: total,
                showData: count,
                coping: true,
                prevContent: '<',
                nextContent: '>'
            });
        }
        $('#newhandList').load("/MyInvest/_PartialNewHand",
            function () {
                var total = $('#total').val();

                setPage(total, 10);
            });
    })
</script>