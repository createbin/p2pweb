@using System.Security.Claims
@{
    Layout = "_LayoutHeadFootE.cshtml";
    var isGur = User.FindFirst(ClaimTypes.Role).Value;
}
<link href="http://cdn.bootcss.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">
<script src="~/js/menudown.js"></script>

<div class="zfct_account_page">
    <div class="zfct_account_left_nav float_left">
        <div class="zfct_left_menu">
            <ul id="accordion" class="accordion" style="margin-top:0px;">
                <li class="accordion_tab">
                    <a href="/Enterprise/CompanyAccount/Index">
                        <div class="link">
                            <i class="icon iconfont margin_left_40">&#xe926;</i><em class="margin_left_10">账户总览</em>
                        </div>
                    </a>
                </li>
                @if (isGur == "0")
                {
                    <li id="accordion_tab_myloan">
                        <div class="link">
                            <i class="icon iconfont margin_left_40">&#xe628;</i><em class="margin_left_10">融资管理</em><i class="fa fa-chevron-down"></i>
                        </div>
                        <ul class="submenu">
                            <li class="accordion_tab">
                                <a href="/Enterprise/CompanyAccount/CorporateFinancing">
                                    融资项目
                                </a>
                            </li>
                            <li class="accordion_tab">
                                <a href="/Enterprise/CompanyAccount/EnterpriseRepaymentPlan">
                                    还款计划
                                </a>
                            </li>
                            <li class="accordion_tab">
                                <a href="EnterpriseFinanceStatistics">
                                    融资统计
                                </a>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li>
                        <div class="link">
                            <i class="icon iconfont margin_left_40">&#xe600;</i><em class="margin_left_10">担保管理</em><i class="fa fa-chevron-down"></i>
                        </div>
                        <ul class="submenu">
                            <li class="accordion_tab">
                                <a href="RepaymentForOthers">
                                    替他人还款
                                </a>
                            </li>
                            <li class="accordion_tab" style="display:none">
                                <a href="RepaymentForOthers">
                                    替他人还款
                                </a>
                            </li>
                            <li class="accordion_tab" style="display:none">
                                <a href="RepaymentForOthers">
                                    替他人还款
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                <li>
                    <div class="link">
                        <i class="icon iconfont margin_left_40">&#xe600;</i><em class="margin_left_10">资金管理</em><i class="fa fa-chevron-down"></i>
                    </div>
                    <ul class="submenu">
                        <li class="accordion_tab">
                            <a href="EnterpriseOpenAccount">
                                企业信息
                            </a>
                        </li>
                        <li class="accordion_tab">
                            <a href="EnterprisepBankDepository">
                                银行存管
                            </a>
                        </li>
                        <li class="accordion_tab">
                            <a href="EnterpriseRecharge">
                                充值
                            </a>
                        </li>
                        <li class="accordion_tab">
                            <a href="EnterpriseTransactionRecord">
                                操作记录
                            </a>
                        </li>

                    </ul>
                </li>
            </ul>
        </div>
    </div>
    @RenderBody()
    <div class="clear"></div>
    <script>
        function AccordionActive(id) {
            var $this = $(".accordion_tab").eq(id);
            $(".accordion_tab").removeClass("open")
            $this.addClass("open");
            if ($this.parent().is(".submenu")) {
                $this.parent().show();
                $this.parent().parent().addClass("open");
            }


        }
    </script>
    <div style="height:30px;"></div>
</div>


