                        <div style="height: 20px;"></div>
                        <p class=" font_size_16 padding_left_15 bold">
                            存管账户信息
                        </p>
                        <div style="height: 25px;"></div>
                        <ul>
                            <li>
                                账户所有人
                            </li>
                            <li>
                                @thirdInfo.RealName
                            </li>
                            <li>
                                @thirdInfo.BankNo
                            </li>
                        </ul>
                        <ul>
                            <li>
                                身份类型
                            </li>
                            <li>
                                
                            </li>
                            <li>
                                投资人
                            </li>
                        </ul>
                        <ul>
                            <li>
                                手机号码
                            </li>
                            <li>
